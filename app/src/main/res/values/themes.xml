<resources xmlns:tools="http://schemas.android.com/tools">

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_200</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
</style>

<style name="GameTitleLarge">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black</item>
</style>
<style name="GameTitleCompact">
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#000000</item>
</style>
<style name="SearchBoxText">
    <item name="android:textSize">5.3sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
    <item name="android:lineSpacingExtra">2.7sp</item>
    <item name="android:textColor">@color/greyishBrown</item>
</style>
<style name="SectionTitle">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/charcoalGrey</item>
</style>
<style name="GameCardTitle">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/whiteFull</item>
</style>
<style name="ParagraphText">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
    <item name="android:lineSpacingExtra">1.6sp</item>
    <item name="android:textColor">@color/greyishBrown</item>
</style>
<style name="ReleaseYearText">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">bold</item>
    <item name="android:lineSpacingExtra">1.4sp</item>
    <item name="android:textColor">@color/whiteFull</item>
</style>
<style name="InfoLabelText">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
    <item name="android:lineSpacingExtra">1.4sp</item>
    <item name="android:textColor">#979797</item>
</style>

</resources>